<AnchorPane fx:id="LogRoot" stylesheets="@design.css" xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ayeyarricemill.loginController">
    <AnchorPane fx:id="LogModal" prefHeight="541.0" prefWidth="857.0" style="-fx-border-width: 2;">
        <children>
            <VBox alignment="CENTER" layoutX="4.0" layoutY="2.0" prefHeight="537.0" prefWidth="336.0"
                  style="-fx-background-color: #3e6a8d;">
                <children>
                    <Label alignment="CENTER" contentDisplay="CENTER"
                           style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;"
                           text="Hello,Friend!"/>
                    <Label style="-fx-font-weight: bold; -fx-text-fill: white;"
                           text="If you don't have an account, create one."/>
                    <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="107.0"
                            style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 20; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15;"
                            text="SIGN UP">
                        <VBox.margin>
                            <Insets top="15.0"/>
                        </VBox.margin>
                    </Button>
                </children>
            </VBox>
            <VBox alignment="CENTER" layoutX="340.0" layoutY="2.0" prefHeight="536.9" prefWidth="513.0"
                  style="-fx-background-color: #fefaff; -fx-border-color: #3e6a8d; -fx-border-width: 2;">
                <children>
                    <ImageView fitHeight="129.0" fitWidth="143.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@images/Logo2.png"/>
                        </image>
                        <VBox.margin>
                            <Insets bottom="-20.0" top="-20.0"/>
                        </VBox.margin>
                    </ImageView>
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="520.0"
                           style="-fx-text-fill: #3e6a8d; -fx-font-weight: bold; -fx-font-size: 25;"
                           text="Sign in to your account"/>
                    <FontAwesomeIconView glyphName="USER" size="15">
                        <VBox.margin>
                            <Insets right="270.0" top="30.0"/>
                        </VBox.margin>
                    </FontAwesomeIconView>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="username">
                        <VBox.margin>
                            <Insets right="185.0" top="-18.0"/>
                        </VBox.margin>
                    </Label>
                    <TextField focusTraversable="false" prefHeight="25.0" prefWidth="327.0" promptText="abcdef..."
                               style="-fx-background-color: transparent; -fx-border-color: #3e6a8d; -fx-border-radius: 20;">
                        <VBox.margin>
                            <Insets left="118.0" right="100.0" top="5.0"/>
                        </VBox.margin>
                    </TextField>
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="password">
                        <VBox.margin>
                            <Insets right="185.0" top="18.0"/>
                        </VBox.margin>
                    </Label>
                    <FontAwesomeIconView glyphName="LOCK" size="15">
                        <VBox.margin>
                            <Insets right="270.0" top="-17.0"/>
                        </VBox.margin>
                    </FontAwesomeIconView>
                    <PasswordField focusTraversable="false" promptText="***************"
                                   style="-fx-background-color: transparent; -fx-border-color: #3e6a8d; -fx-border-radius: 20;">
                        <VBox.margin>
                            <Insets left="118.0" right="100.0" top="5.0"/>
                        </VBox.margin>
                    </PasswordField>
                    <Label style="-fx-font-size: 15; -fx-font-weight: bold;" text="Forgot your password?">
                        <VBox.margin>
                            <Insets top="30.0"/>
                        </VBox.margin>
                    </Label>
                    <Line endX="57.5" opacity="0.21" startX="-100.0">
                        <VBox.margin>
                            <Insets top="3.0"/>
                        </VBox.margin>
                    </Line>
                    <Button focusTraversable="false" mnemonicParsing="false" prefHeight="39.0" prefWidth="207.0"
                            style="-fx-background-color: #3e6a8d; -fx-text-fill: WHITE; -fx-background-radius: 20; -fx-font-size: 15; -fx-font-weight: bold;"
                            text="SIGN IN">
                        <VBox.margin>
                            <Insets top="30.0"/>
                        </VBox.margin>
                    </Button>
                </children>
            </VBox>
        </children>
    </AnchorPane>
</AnchorPane>
